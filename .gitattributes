# Auto detect text files and perform LF normalization
* text=auto

# TypeScript
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf

# JSON
*.json text eol=lf
*.jsonc text eol=lf

# Markdown
*.md text eol=lf
*.mdx text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Config files
.prettierrc text eol=lf
.eslintrc.js text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.env.example text eol=lf
.env.local.example text eol=lf

# Prisma
*.prisma text eol=lf linguist-language=Prisma

# Lock files
pnpm-lock.yaml text eol=lf -diff
package-lock.json text eol=lf -diff
yarn.lock text eol=lf -diff

# SQL
*.sql text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# Documents
*.pdf binary

# Exclude files from being exported
.github export-ignore
.vscode export-ignore
.idea export-ignore
.DS_Store export-ignore
*.log export-ignore
